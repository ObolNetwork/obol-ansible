{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "github-actions",
    "regex"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^group_vars/all\\.yml$"
      ],
      "matchStrings": [
        "node_image_version:\\s*['\\\"]?v?(?<currentValue>[\\w.-]+)['\\\"]?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "ObolNetwork/charon",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchDepTypes": [
        "github-actions"
      ],
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "schedule": [
        "every weekend"
      ],
      "labels": [
        "renovate/github-actions"
      ],
      "groupName": "GitHub Actions updates"
    },
    {
      "matchManagers": [
        "regex"
      ],
      "matchDepNames": [
        "ObolNetwork/charon"
      ],
      "labels": [
        "renovate/charon"
      ],
      "groupName": "Charon image updates"
    }
  ]
}
